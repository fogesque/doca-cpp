{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "inherits": [
                "base"
            ],
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-14",
                "CMAKE_CXX_COMPILER": "g++-14"
            }
        },
        {
            "name": "amd64-linux-release",
            "displayName": "AMD64 Linux Release",
            "inherits": [
                "linux-base"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "amd64-linux-debug",
            "displayName": "AMD64 Linux Debug",
            "inherits": [
                "linux-base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ERRORS_BUILD_TESTS": "ON",
                "ERRORS_BUILD_SAMPLES": "ON",
                "VCPKG_MANIFEST_FEATURES": "testing;samples"
            }
        }
    ]
}